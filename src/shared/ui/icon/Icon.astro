---
import Phone from '@shared/assets/icons/phone.svg'
import Mail from '@shared/assets/icons/mail.svg'
import Telegram from '@shared/assets/icons/telegram.svg'
import Github from '@shared/assets/icons/github.svg'
import Logo from '@shared/assets/icons/logo.svg'
import Glasses from '@shared/assets/icons/glasses.svg'
import Decor from '@shared/assets/icons/decor.svg'
import Decor2 from '@shared/assets/icons/decor-2.svg'

export const icons = {
  phone: Phone,
  mail: Mail,
  telegram: Telegram,
  github: Github,
  logo: Logo,
  glasses: Glasses,
  decor: Decor,
  decor2: Decor2
}

export type IconKey = keyof typeof icons

interface Props {
  name: IconKey
  class?: string
  ariaLabel?: string
  initial?: boolean
}

const { class: className, name, ariaLabel, initial = false, ...props } = Astro.props as Props

const SelectedIcon = icons[name]

export { Icon }
---

<SelectedIcon
  class:list={['icon', { icon_initial: initial }, className]}
  role={ariaLabel ? 'img' : 'presentation'}
  aria-hidden={ariaLabel ? undefined : 'true'}
  aria-label={ariaLabel}
  {...props}
/>

<style>
  @import './icon.scss';
</style>

---
interface Props {
  as?: string
  size?: '20' | '18'
  color?: 'white' | 'gray'
  class?: string
}

const {
  as: Tag = 'p',
  size = '18',
  color = 'white',
  class: className,
  ...props
} = Astro.props as Props

export { Text }
---

<Tag
  {...props}
  class:list={[
    'text',
    { [`text_size_${size}`]: !!size },
    { [`text_color_${color}`]: !!color },
    className
  ]}
>
  <slot />
</Tag>

<style>
  @import './Text.scss';
</style>

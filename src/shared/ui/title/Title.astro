---
interface Props {
  as?: 'h1' | 'h2' | 'h3' | 'h4' | 'h5' | 'h6' | 'span' | 'p'
  size?: '24' | '16'
  class?: string
}

const { as: Tag = 'h2', size = '16', class: className, ...props } = Astro.props as Props

export { Title }
---

<Tag
  {...props}
  class:list={['title', { [`title_size_${size}`]: !!size }, className]}
>
  <slot />
</Tag>

<style>
  @import './Title.scss';
</style>
